<% layout("/layouts/boilerplate") %>

    <div class="container mt-5">
        <div class="row">
            <div class="col-md-8 offset-md-2">
                <div class="card mb-4 shadow-lg">
                    <!-- Image Section -->
                    <img src="<%= specificPost.url %>" class="card-img-top show-img" alt="Listing Image" />

                    <div class="card-body">
                        <!-- Title Section -->
                        <h3 class="card-title text-center text-dark mb-3 font-weight-bold">
                            <%= specificPost.title %>
                        </h3>

                        <!-- Description Section -->
                        <p class="card-text text-muted mb-3" style="font-size: 1.2rem">
                            <%= specificPost.description %>
                        </p>

                        <!-- Price Section (smaller font size) -->
                        <p class="card-text" style="font-size: 0.9rem">
                            &#8377;<%= Number(specificPost.price).toLocaleString("en-IN") %>/night
                        </p>

                        <!-- Location Section (smaller font size) -->
                        <p class="card-text" style="font-size: 0.9rem">
                            <%= specificPost.location %>
                        </p>

                        <!-- Country Section (smaller font size) -->
                        <p class="card-text" style="font-size: 0.9rem">
                            <%= specificPost.country %>
                        </p>
                    </div>
                </div>

                <!-- Edit and Delete Buttons -->
                <div class="d-flex justify-content-between">
                    <!-- Edit Button -->
                    <form method="get" action="/listings/<%= specificPost._id %>/edit">
                        <button type="submit" class="btn add-btn btn-lg w-48">
                            Edit Listing
                        </button>
                    </form>

                    <!-- Delete Button -->
                    <form method="post" action="/listings/<%= specificPost._id %>?_method=DELETE">
                        <button type="submit" class="btn btn-dark btn-lg w-48">
                            Delete Listing
                        </button>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-8 offset-md-2">
            <div class="card mb-4 shadow-lg">
                <div class="card-body">
                    <h4 class="text-center text-dark mb-4 font-weight-bold">
                        Leave a Review
                    </h4>
                    <form action="/listings/<%= specificPost._id %>/reviews" method="POST" novalidate
                        class="needs-validation">
                        <div class="mb-3">
                            <label for="rating" class="form-label">Rating</label>
                            <input type="range" class="form-range" name="review[rating]" id="rating" min="1" max="5" />
                        </div>
                        <div class="mb-3">
                            <label for="comment" class="form-label">Comment</label>
                            <textarea class="form-control" name="review[comment]" id="comment" rows="3"
                                required></textarea>
                            <div class="invalid-feedback">Comment to Add review</div>
                        </div>
                        <button type="submit" class="btn btn-dark btn-lg w-100">
                            Submit Review
                        </button>
                    </form>
                </div>
                <h1 class="mt-4 text-center">All Reviews</h1>
                <ul class="list-styled">
                    <div class="row">
                        <% for (review of specificPost.reviews) { %>
                            <div class="col-md-5 col-sm-12 mb-4 offset-md-1">
                                <div class="card review-body shadow-sm">
                                    <div class="card-body">
                                        <h5 class="card-title fw-bold text-primary">Jane Doe</h5>
                                        <p class="card-text">
                                            <%= review.comment %>
                                        </p>
                                        <p class="card-text text-muted">
                                            <%= review.rating %> <i class="fas fa-star text-warning"></i>
                                        </p>
                                    </div>
                                </div>
                            </div>
                            <% } %>
                    </div>
                </ul>

            </div>
        </div>